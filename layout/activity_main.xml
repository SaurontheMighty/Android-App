<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ab0202"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/als"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="100dp"
        android:text="Life Solutions"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/btnsplash"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbtn"
        android:layout_marginTop="60dp"
        android:text="stopwatch"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ab0202"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/als"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btntimer"
        />

    <Button
        android:id="@+id/btntimer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbtn"
        android:layout_marginTop="20dp"
        android:text="Pomodoro"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ab0202"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btnsplash"
        app:layout_constraintBottom_toTopOf="@id/btnactualtimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnactualtimer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbtn"
        android:layout_marginTop="20dp"
        android:text="Timer"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ab0202"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btntimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</android.support.constraint.ConstraintLayout>
