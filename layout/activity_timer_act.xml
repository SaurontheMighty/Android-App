<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".stopwatch_act">

    <ImageView
        android:id="@+id/ttimer_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_timer"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ttimer_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/ttimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="50dp"
        android:textSize="62sp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/ttimer_box"
        app:layout_constraintBottom_toTopOf="@id/btstart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btstart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbtn"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ab0202"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer"
        />

    <Button
        android:id="@+id/btstop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbtn2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ab0202"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btstart"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>